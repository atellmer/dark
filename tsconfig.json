{
	"compilerOptions": {
		"target": "es5",
		"moduleResolution": "node",
		"module": "commonjs",
		"outDir": "./lib/",
		"sourceMap": true,
		"noImplicitAny": false,
		"removeComments": false,
		"downlevelIteration": true,
		"allowJs": true,
		"lib": [
			"es6",
			"es7",
			"dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@helpers": ["src/helpers"]
    }
	},
	"include": [
		"./src/**/*"
	]
}